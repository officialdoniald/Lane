                                            <TextBlock Foreground="#FF333833" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" FontSize="20" Margin="10,0" Text="{Binding Honnanindul}"></TextBlock>
                                            <TextBlock Foreground="#FF333833" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" FontSize="20" Margin="10,0" Text="{Binding Mikorindul}"></TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                        <StackPanel x:Name="ha_a_jaratok_szerint">
                            <ListBox Background="Transparent" ItemsSource="{Binding}" x:Name="jaratokkedvencekrendezve">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Grid >
                                            <Grid.RowDefinitions>
                                                <RowDefinition Height="*"></RowDefinition>
                                                <RowDefinition Height="*"></RowDefinition>
                                            </Grid.RowDefinitions>
                                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Foreground="#FF333833" FontSize="25" Text="{Binding Megallo}" FontWeight="Bold"></TextBlock>
                                            <TextBlock HorizontalAlignment="Left" Grid.Row="1" Foreground="#FF333833" TextWrapping="WrapWholeWords" FontSize="20" Text="{Binding Jaratok_mikor}"></TextBlock>
                                        </Grid>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </StackPanel>
                    </StackPanel>
                </ScrollViewer>
                <ScrollViewer x:Name="jaratokcrollvieer"  IsEnabled="False">
                    <StackPanel Visibility="Collapsed" x:Name="menetrendleiras">
                        <TextBlock Foreground="#FF333833" HorizontalAlignment="Center" FontSize="40" Text="Járatok szerint:"></TextBlock>
                        <ListBox Background="Transparent" ItemsSource="{Binding}" x:Name="menetrendlist">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <Grid.ColumnDefinitions>
                                            <ColumnDefinition></ColumnDefinition>
                                            <ColumnDefinition></ColumnDefinition>
                                        </Grid.ColumnDefinitions>
                                        <TextBlock Foreground="#FF333833" HorizontalAlignment="Center" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Grid.RowSpan="2" Margin="1,0,0,0" FontSize="33" FontWeight="Bold" Text="{Binding Hanyasjarat}"></TextBlock>
                                        <TextBlock Foreground="#FF333833" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="0" FontSize="20" Margin="10,0" Text="{Binding Honnanindul}"></TextBlock>
                                        <TextBlock Foreground="#FF333833" VerticalAlignment="Center" HorizontalAlignment="Left" Grid.Column="1" Grid.Row="1" FontSize="20" Margin="10,0" Text="{Binding Mikorindul}"></TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
                <ScrollViewer x:Name="megallokcrollvieer"  IsEnabled="False">
                    <StackPanel Visibility="Collapsed" x:Name="megallok_szerinti_listazas">
                        <TextBlock Foreground="#FF333833" FontSize="40" HorizontalAlignment="Center" Text="Megállók szerint:"></TextBlock>
                        <ListBox Background="Transparent"  ItemsSource="{Binding}" x:Name="menetrend_szerint_list">
                            <ListBox.ItemTemplate>
                                <DataTemplate>
                                    <Grid >
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="*"></RowDefinition>
                                            <RowDefinition Height="*"></RowDefinition>
                                        </Grid.RowDefinitions>
                                        <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="0" Foreground="#FF333833" FontSize="25" Text="{Binding Megallo}" FontWeight="Bold"></TextBlock>
                                        <TextBlock HorizontalAlignment="Left" Grid.Row="1" Foreground="#FF333833" TextWrapping="WrapWholeWords" FontSize="20" Text="{Binding Jaratok_mikor}"></TextBlock>
                                    </Grid>
                                </DataTemplate>
                            </ListBox.ItemTemplate>
                        </ListBox>
                    </StackPanel>
                </ScrollViewer>
                <ScrollViewer x:Name="elhagytamlistacrollvieer" IsEnabled="False">
                    <StackPanel Visibility="Collapsed" x:Name="elhagytamleiras">
                        <TextBlock Foreground="#FF333833" FontSize="40" Text="Elhagytam" HorizontalAlignment="Center"></TextBlock>
                        <Grid HorizontalAlignment="Left">
                            <Grid.RowDefinitions>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                                <RowDefinition Height="*"></RowDefinition>
                            </Grid.RowDefinitions>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                                <ColumnDefinition Width="*"></ColumnDefinition>
                            </Grid.ColumnDefinitions>
                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="0" Foreground="#FF333833" FontSize="20" Text="Hol: " Margin="0,10"></TextBlock>
                            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="0" x:Name="hol" Height="10" Width="200" Margin="0,10"></TextBox>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="1" Foreground="#FF333833" FontSize="20" Text="Mit: " Margin="0,10"></TextBlock>
                            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="1" x:Name="mit" Height="10" Width="200" Margin="0,10"></TextBox>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="2" Foreground="#FF333833" FontSize="20" Text="Név: " Margin="0,10"></TextBlock>
                            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="2" x:Name="ki" Height="10" Width="200" Margin="0,10"></TextBox>

                            <TextBlock HorizontalAlignment="Right" VerticalAlignment="Center" Grid.Column="0" Grid.Row="3" Foreground="#FF333833" FontSize="20" Text="Elérhetőség: " Margin="0,10"></TextBlock>
                            <TextBox HorizontalAlignment="Left" VerticalAlignment="Center"  Grid.Column="1" Grid.Row="3" x:Name="id" Height="10" Width="200" Margin="0,10"></TextBox>

                            <Button VerticalAlignment="Center" Grid.Column="1" Grid.Row="4" HorizontalAlignment="Center" x:Name="elveszettbutton" Foreground="Beige" Background="#FFB26314" Width="100" Height="50" Content="Küldés" Click="elveszettbutton_Click" Margin="0,10"></Button>
                            <TextBlock HorizontalAlignment="Stretch" VerticalAlignment="Center" Grid.Column="1" Grid.Row="5" x:Name="figyelmeztetes" Text="" Foreground="#FF333833" FontSize="20" Margin="0,10"></TextBlock>

                            <TextBlock HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="0" Grid.Row="6" Text="Eddig hol,mit,kik: " Foreground="#FF333833" FontSize="20" Margin="0,10"></TextBlock>
                            <Button HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Column="1" Grid.Row="6" x:Name="frissitobutton" Foreground="Beige" Background="#FFB26314" Width="100" Height="50" Content="Frissítés" Click="frissitobutton_Click" Margin="0,10"></Button>
                            
                            <ListBox Background="Transparent" ItemsSource="{Binding}" x:Name="elhagytam_list">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <StackPanel>
                                            <TextBlock FontSize="20" Foreground="#FF333833" Margin="5,0,0,0" Text="{Binding hol}"></TextBlock>
                                            <TextBlock FontSize="20" Foreground="#FF333833" Margin="5,0,0,0" Text="{Binding mit}"></TextBlock>
                                            <TextBlock FontSize="20" Foreground="#FF333833" Margin="5,0,0,0" Text="{Binding ki}"></TextBlock>
                                            <TextBlock FontSize="20" Foreground="#FF333833" Margin="5,0,0,0" Text="{Binding id}"></TextBlock>
                                        </StackPanel>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Grid>
                    </StackPanel>
                </ScrollViewer>
                <StackPanel Visibility="Collapsed" x:Name="leirasleiras">
                    <TextBlock Foreground="#FF333833" FontSize="40" Text="Leírás" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF333833" FontSize="20" Text="75 és 64-es busz hiányzik."></TextBlock>
                </StackPanel>
                <StackPanel Visibility="Collapsed" x:Name="elerhetosegleiras">
                    <TextBlock Foreground="#FF333833" FontSize="40" Text="Elérhetőség" HorizontalAlignment="Center"></TextBlock>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF333833" FontSize="20" Text="Lénárt Bence"></TextBlock>
                    <TextBlock HorizontalAlignment="Center" VerticalAlignment="Center" Foreground="#FF333833" FontSize="20" Text="bence960206@gmail.com"></TextBlock>
                </StackPanel>
            </Grid>
        </SplitView>
    </Grid>
</Page>
